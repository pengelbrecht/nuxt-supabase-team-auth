{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    // Strict mode settings
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    // Module settings
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    // Declaration settings
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    // Path resolution
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["./*"],
      "#app": ["src/runtime/types/shims.d.ts"],
      "#imports": ["src/runtime/types/shims.d.ts"],
      "#supabase/server": ["src/runtime/types/shims.d.ts"]
    },
    "types": ["node", "@supabase/supabase-js"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "playground",
    "tests"
  ]
}